/* pages/movies/movie-detail/movie-detail.wxss */
@import "/pages/movies/movie-stars/stars.wxss";

.container{
  display: flex;
  flex-direction: column;
}

.header-img{
  height:320rpx;
  width: 100%;
  /* 让图片模糊显示 */
  -webkit-filter: blur(20px)
}

.header-img-hover{
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column; 
}

.title{
  font-size: 19px;
  color: #fff;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.detail-desc{
  font-size:28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.comment{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.comment-like{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.comment-desc{
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.movie-img{
  height: 238rpx;
  width: 175rpx;
  position:absolute;
  top: 160rpx;
  right: 30rpx;
}

.movie-desc{
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title{
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark{
  margin-right: 30rpx;
  white-space:nowrap;
  color: #999; 
}

.cut-off-rule{
  width: 100%100%;
  height: 1px;
  margin-top: 45rpx;
  background-color: #d9d9d9;
}

.summary{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.summary-content{
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}

.casts-info{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.casts-title{
  color: #999;
  margin-bottom:40rpx;
}

.scroll-view{
  white-space: nowrap;
}

.casts-container{
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}

.cast-img{
  width: 170rpx;
  height: 210rpx;
}

.cast-name{
  margin: 10rpx auto 0;
}



