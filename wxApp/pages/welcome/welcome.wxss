/* 用flex布局 快速实现元素的水平垂直居中 */

page {
  background-color: #b3d4db;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 162rpx;
  overflow: hidden;
  border: 1px solid #fff;
  border-radius: 50%;
}

.user-name {
  margin-top: 150rpx;
  /* font-size: 44rpx; */
  font-weight: bold;
}

.desc-container {
  margin-top: 150rpx;
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f89;
  border-radius: 5rpx;
  text-align: center;
}

.app-desc {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
}
